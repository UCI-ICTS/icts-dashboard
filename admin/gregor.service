[Unit]
Description=GREGoR Dashboard gunicorn daemon
Requires=gregor.socket
After=network.target

[Service]
User=nginx
Group=developers
WorkingDirectory=/var/www/github/GREGor_dashboard/server
ExecStart=/var/www/github/GREGor_dashboard/server/env/bin/python \
    /var/www/github/GREGor_dashboard/server/env/bin/gunicorn \
    --access-logfile /var/log/gunicorn/api_stdout.log \
    --log-level=debug \
    --log-file /var/log/gunicorn/api_stderr.log \
    --workers 3 \
    --bind unix:/var/www/github/GREGor_dashboard/server/gregor.sock \
    config.wsgi:application

Environment="PATH=/var/www/github/GREGor_dashboard/server/env/bin:/usr/bin:/bin"
Restart=always

[Install]
WantedBy=multi-user.target
